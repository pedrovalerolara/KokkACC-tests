#Set your Kokkos path to something appropriate
#KOKKOS_PATH = ${HOME}/Kokkos/kokkos
KOKKOS_PATH = ../../../../../
#KOKKOS_DEVICES = "Cuda"
KOKKOS_DEVICES = "OpenACC"
KOKKOS_ARCH = "Volta70"
KOKKOS_CUDA_OPTIONS = force_uvm,enable_lambda
SRC = $(wildcard *.cc)

default: build
	echo "Start Build"
	
CXXFLAGS = -g -O3 -DUSE_OMP=1 -lineinfo -DRAJA_USE_GETTIME -I./includes -I./ -lineinfo
#CXXFLAGS = -g -O3 -Minfo=acc -acc -DUSE_OMP=1 -lineinfo -DRAJA_USE_GETTIME -I./includes -I./ -lineinfo

ifeq ( $(USE_MPI), yes) 
CXX = mpicxx
CXXFLAGS += -DUSE_MPI=1
else
#CXX = ${KOKKOS_PATH}/bin/nvcc_wrapper
#CXXFLAGS += -DUSE_MPI=0
CXX = nvc++
#CXXFLAGS += -DUSE_MPI=0 -Minfo=acc -acc 
CXXFLAGS += -DUSE_MPI=0 -acc 
endif

LINK = ${CXX}

#LINKFLAGS =  
LINKFLAGS = -acc  
#EXE = lulesh.cuda
EXE = lulesh.acc

DEPFLAGS = -M

OBJ = $(SRC:.cc=.o)
LIB =

include $(KOKKOS_PATH)/Makefile.kokkos

build: $(EXE)

$(EXE): $(OBJ) $(KOKKOS_LINK_DEPENDS)
	$(LINK) $(KOKKOS_LDFLAGS) $(LINKFLAGS) $(EXTRA_PATH) $(OBJ) $(KOKKOS_LIBS) $(LIB) -o $(EXE)

clean: kokkos-clean 
	rm -f *.o

# Compilation rules

%.o:%.cc $(KOKKOS_CPP_DEPENDS)
	$(CXX) $(KOKKOS_CPPFLAGS) $(KOKKOS_CXXFLAGS) $(CXXFLAGS) $(EXTRA_INC) -c $<



